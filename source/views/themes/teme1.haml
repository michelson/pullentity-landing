.col-12
  %h2 {{title}}

.col-12
  #carousel-example-generic.myCarousel.carousel.slide
    .carousel-inner
      {{#each photos}}

      .item
        %img.img-responsive{:alt => "", :src => "{{PhotoImg 'xlarge'}}"}/
        .carousel-caption
          %h4 {{image.title}}
          %p {{image.caption}}

      {{/each}}

    %a.left.carousel-control{"data-slide" => "prev", :href => ".myCarousel"}
      %span.icon-prev

    %a.right.carousel-control{"data-slide" => "next", :href => ".myCarousel"}
      %span.icon-next

.col-12
  %p {{{ body }}}
